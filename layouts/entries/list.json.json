{{- $page := . -}}

{{- $page.Scratch.Add "page_index" slice -}}

{{- range $page.RegularPages -}}
    {{- $page.Scratch.Add "page_index" (dict
        "categories" .Params.categories
        "date" .PublishDate
        "description" (.Description | markdownify | plainify | htmlUnescape)
        "keywords" .Params.keywords
        "link" .RelPermalink
        "tags" .Params.tags
        "text" (strings.TrimRight " " (replace (.Plain | htmlUnescape) "\n" " "))
        "title" (.Title | markdownify | plainify | htmlUnescape)) -}}
{{- end -}}

{{- $page.Scratch.Get "page_index" | jsonify -}}